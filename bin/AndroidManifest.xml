<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.luckbaby"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppStartLoadTranslucent" >
        <activity
            android:name=".activity.login.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主界面 -->
        <activity android:name=".MainActivity" />
        <!-- 注册界面 -->
        <activity android:name=".activity.login.RegisterActivity" />
        <!-- 忘记密码界面 -->
        <activity android:name=".activity.login.ForgetPasswordActivity" />
        
        <!-- 代客下单 -->
        <activity android:name="com.example.luckbaby.activity.agentorder.AgentOrderActivity" />
        
        
        <!-- 回访 -->
        <activity android:name="com.example.luckbaby.activity.backvisit.BackvisitActivity" />
        
        
        <!-- 商品管理 -->
        <activity android:name="com.example.luckbaby.activity.commoditymanagement.CommodityManagementActivity" />
        
        
        <!-- 营销中心 -->
        <activity android:name="com.example.luckbaby.activity.marketingcenter.MarketingCenterActivity" />
        
        
        <!-- 会员统计 -->
        <activity android:name="com.example.luckbaby.activity.memberstatistics.MemberStatisticsActivity" />
        
        
        <!-- 订单处理 -->
        <activity android:name="com.example.luckbaby.activity.order.OrderActivity" />
        
        
        <!-- 订单统计 -->
        <activity android:name=".com.example.luckbaby.activity.orderstatistics.OrderStatisticsActivity" />
        
        
        <!-- 结算中心 -->
        <activity android:name="com.example.luckbaby.activity.settlementcenter.SettlementCenterActivity" />
        
    </application>

</manifest>
